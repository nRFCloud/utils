  "devDependencies": {
    "@types/aws-iot-device-sdk": "^2.2.0",
    "@types/aws-lambda": "^8.10.46",
    "@types/chalk": "^2.2.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^15.12.2",
    "@types/tmp": "^0.1.0",
    "@types/uuid": "^3.4.5",
    "@types/yargs": "^15.0.12",
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.653.0",
    "chalk": "^2.4.2",
    "colors": "^1.3.3",
    "commitizen": "^4.1.2",
    "constructs": "^3.3.75",
    "cz-conventional-changelog": "^3.2.0",
    "glob": "^7.1.4",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "strip-ansi": "^6.0.0",
    "tmp": "^0.1.0",
    "tslint": "^6.1.2",
    "typescript": "^4.0.2",
    "uuid": "^3.3.3",
    "yargs": "^15.3.1"
